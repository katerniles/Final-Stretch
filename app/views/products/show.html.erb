<div class="container">
  <div class="row">
    <p>
      <strong><%= @product.name %></strong>
    </p>
    <p>
      <%= @product.description %>
    </p>
    <p>
      Color: <%= @product.colour %>
    </p>
    <p>
    <%= image_tag @product.image_url, :data => { :action => "zoom"} %>
    </p>
    <p>
      $<%= @product.price %>
    </p>
<br>
    <p>
      <strong>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></strong></p>

<%= render 'new_comment' %>
<%= render 'comments' %>
<p> <%= will_paginate @comments %></p>


<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $<%= @product.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Your Purchase"
          data-amount="<%= @product.price_in_cents %>"></script>
<% end %> 
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
</div>
</script>
</div>

