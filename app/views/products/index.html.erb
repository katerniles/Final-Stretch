<div class="product-index">
  <h1>List of Products</h1>

  <div class="table-responsive">
    <table class="product-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Color</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <% @products .each do |product| %>
          <% end %>      </tbody>
    </table>
  </div>

  <br>

  <%= link_to 'New Product', new_product_path %>
</div>